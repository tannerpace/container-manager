{
  "appId": "com.containerManager.app",
  "productName": "Container Manager",
  "directories": {
    "buildResources": "build",
    "output": "release"
  },
  "files": ["dist/**/*", "node_modules/**/*", "package.json"],
  "extraResources": [
    {
      "from": "dist/electron",
      "to": "app/dist/electron"
    }
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ]
  }
}
