{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🚀 Start Dev Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "statusbar": {
          "label": "$(play) Dev Server"
        }
      }
    },
    {
      "label": "🛑 Stop All Servers",
      "type": "shell",
      "command": "pkill",
      "args": ["-f", "vite"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🏗️ Build",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "👀 Preview",
      "type": "shell",
      "command": "npm",
      "args": ["run", "preview"],
      "group": "build",
      "isBackground": true,
      "dependsOn": "🏗️ Build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🔍 Lint Code",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "🔧 Fix Lint Issues",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint", "--", "--fix"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "📦 Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "🧹 Clean Build",
      "type": "shell",
      "command": "rm",
      "args": ["-rf", "dist", "node_modules/.vite"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🔄 Fresh Install",
      "type": "shell",
      "command": "npm",
      "args": ["ci"],
      "group": "build",
      "dependsOn": "🧹 Clean Build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "� Check Docker Connection",
      "type": "shell",
      "command": "curl",
      "args": ["-f", "-s", "http://localhost:2375/version"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "📊 Docker System Info",
      "type": "shell",
      "command": "docker",
      "args": ["system", "df"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "🌐 Open in Browser",
      "type": "shell",
      "command": "open",
      "args": ["http://localhost:5173"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "� Open Development Guide",
      "type": "shell",
      "command": "code",
      "args": ["DEVELOPMENT.md"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "�🚀 Full Dev Setup",
      "dependsOrder": "sequence",
      "dependsOn": [
        "📦 Install Dependencies",
        "🐳 Check Docker Connection",
        "🚀 Start Dev Server",
        "🌐 Open in Browser"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "🔧 Build Electron",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build:electron"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "⚡ Start Electron App",
      "type": "shell",
      "command": "npm",
      "args": ["run", "electron"],
      "group": "build",
      "dependsOn": ["🏗️ Build Production", "🔧 Build Electron"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "🚀 Start Electron Dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "electron:dev"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "⚡ Electron Dev Auto-Reload",
      "type": "shell",
      "command": "npm",
      "args": ["run", "electron:dev:reload"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "statusbar": {
          "label": "$(zap) Auto-Reload Electron"
        }
      }
    },
    {
      "label": "📦 Package Electron App",
      "type": "shell",
      "command": "npm",
      "args": ["run", "package"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "🔍 Check Node.js Versions",
      "type": "shell",
      "command": "echo",
      "args": [
        "'=== Node.js Version Check ===\nTerminal Node.js:' && node --version && echo 'NVM Default:' && nvm version default && echo 'Available versions:' && nvm list --no-colors | head -10"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "🔧 Fix VS Code Node.js Path",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "echo '=== Updating VS Code Node.js paths ===' && NVM_CURRENT=$(nvm which current) && echo \"Current NVM Node.js: $NVM_CURRENT\" && echo 'Restart VS Code after this completes to apply changes.'"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}
